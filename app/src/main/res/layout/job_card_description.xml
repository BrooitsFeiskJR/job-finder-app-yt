<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    android:layout_gravity="center"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        >
        <ImageView
            android:background="@drawable/custom_background_image_view_company_icon"
            android:id="@+id/ivIconCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCompany"
            app:layout_constraintBottom_toBottomOf="@id/tvCompany"
            android:contentDescription="ICON COMPANY"
            />

        <TextView
            android:layout_marginStart="51dp"
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Google"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCompany"
            android:text="UI/UX Designer"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/tvJobSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvJobTitle"
            app:layout_constraintTop_toBottomOf="@id/tvJobTitle"
            android:text="Ourinhos, SP"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondaryTextColor"
            android:fontFamily="@font/gotham_pro_regular"

            />

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCompany"
            app:layout_constraintBottom_toBottomOf="@id/tvCompany"
            android:src="@drawable/isfavorite_false_icon"
            android:layout_marginEnd="8dp"
            />

        <TextView
            android:id="@+id/tvFirstCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJobSubTitle"
            android:text="Remoto"
            android:layout_marginTop="21dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/custom_background_text_view_job_card_description"
            android:padding="10dp"
            android:textColor="@color/buttonBackgroundSuggestionColor"
            android:fontFamily="@font/gotham_pro_regular"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvFirstCategory"
            app:layout_constraintTop_toBottomOf="@id/tvJobSubTitle"
            android:text="Tempo Integral"
            android:layout_marginTop="21dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/custom_background_text_view_job_card_description"
            android:padding="10dp"
            android:textColor="@color/buttonBackgroundSuggestionColor"
            android:fontFamily="@font/gotham_pro_regular"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>